{
  "name": "scripture/memorization",
  "description": "Memorize Gods Word and take note of His lessons for you personally.",
  "minimum-stability": "stable",
  "license": "MIT",
  "version": "0.0.1",
  "authors": [
    {
      "name": "Jarno Vogelzang",
      "email": "Jarnovogelzang@live.nl"
    }
  ],
  "autoload": {
    "psr-4": {
      "Scripture\\Memorization\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "laravel/pint": "^1.17",
    "phpstan/phpstan": "^1.11",
    "phpunit/phpunit": "^11",
    "rector/rector": "^1.2"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "require": {
    "php": "^8.3",
    "symfony/console": "^7.1"
  },
  "scripts": {
    "fix": "vendor/bin/pint",
    "test": [
      "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-text",
      "vendor/bin/phpstan analyse src tests",
      "vendor/bin/pint --test"
    ]
  },
  "scripts-descriptions": {
    "fix": "Run code style formatter",
    "test": "Test the application"
  }
}
